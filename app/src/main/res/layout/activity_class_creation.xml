<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassCreationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20">

        <TextView
            android:id="@+id/CreatorTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/makeClassTitle"
            android:textSize="35sp"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_weight="0.5"/>

        <TextView
            android:id="@+id/InputNameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Class Name"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_weight="0.5"/>

        <EditText
            android:id="@+id/NameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Class Name Here"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:paddingRight="20dp"/>

        <TextView
            android:id="@+id/InputProfessorTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Professor Name"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_weight="0.5"/>

        <EditText
            android:id="@+id/ProfessorInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Professor Name Here"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:paddingRight="20dp"/>

        <TextView
            android:id="@+id/InputLocationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_weight="0.5"/>

        <EditText
            android:id="@+id/LocationInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location Name Here"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:paddingRight="20dp"/>

        <TextView
            android:id="@+id/InputWeekdaysTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/DoTW"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_weight="0.5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            android:weightSum="8">
            <!--
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:weightSum="7"
                android:orientation="horizontal">
            -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="end|center_horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sun"
                        android:textAlignment="center"/>
                    <CheckBox
                        android:id="@+id/Inputweekday1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textAlignment="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mon"
                        android:textAlignment="center"/>
                    <CheckBox
                        android:id="@+id/Inputweekday2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textAlignment="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tue"
                        android:textAlignment="center"/>
                    <CheckBox
                        android:id="@+id/Inputweekday3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textAlignment="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wed"
                        android:textAlignment="center"/>
                    <CheckBox
                        android:id="@+id/Inputweekday4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textAlignment="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thu"
                        android:textAlignment="center"/>
                    <CheckBox
                        android:id="@+id/Inputweekday5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textAlignment="center"
                        />
                </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fri"
                    android:textAlignment="center"/>
                <CheckBox
                    android:id="@+id/Inputweekday6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sat"
                        android:textAlignment="center"/>
                    <CheckBox
                        android:id="@+id/Inputweekday7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textAlignment="center"
                        />
                </LinearLayout>
            <!--</RelativeLayout>-->
        </LinearLayout>

        <TextView
        android:id="@+id/StartTimeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Time"
        android:textSize="15sp"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:textStyle="italic"
        android:layout_weight="0.5"/>

        <TimePicker
            android:id="@+id/timepicker1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:timePickerMode="spinner"/>

        <TextView
            android:id="@+id/EndTimeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Time"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textStyle="italic"
            android:layout_weight="0.5"/>

        <TimePicker
            android:id="@+id/timepicker2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:timePickerMode="spinner"/>


        <Button
            android:id="@+id/CreateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREATE"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="end"/>

        <TextView
            android:id="@+id/ErrorMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/holo_red_light"
            android:textAlignment="4"
            android:text=""
            />



    </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>